<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board.data.BoardMapper">
	<select id="list" resultType="cdto">
		select * from board
	</select>
	
	<select id="count" resultType="int">
		select count(*) from board
	</select>
	
	<insert id="BoardInsert" parameterType="bdto">
		insert into board(writer, subject, requirepoint, content, writeday) values(#{writer}, #{subject}, #{requirepoint}, #{content}, now())
	</insert>
</mapper>